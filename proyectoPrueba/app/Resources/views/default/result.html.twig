{% extends 'template.html.twig' %}

{% block title %}Listado de productos{% endblock %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <div id="welcome">
                <h1><span>Listado de productos</h1>
            </div>
            <div id="status">
                <table>
                    <tr>
                        <th> ID </th>
                        <th> NOMBRE </th>
                        <th> PRECIO </th>
                    </tr>
                    {% for item in lista %}
                        <tr>
                            <td>{{ item.id }}</td>
                            <td>{{ item.name }}</td>
                            <td>{{ item.price }}</td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>

{% endblock %}